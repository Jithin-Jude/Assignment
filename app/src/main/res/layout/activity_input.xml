<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".InputActivity">

    <EditText
        android:id="@+id/scoreOne"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:ems="10"
        android:inputType="number"
        android:background="@drawable/rounded_edittext"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/scoreTwo"
        app:layout_constraintEnd_toStartOf="@+id/scoreTwo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/scoreTwo" />

    <EditText
        android:id="@+id/scoreTwo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="32dp"
        android:ems="10"
        android:inputType="number"
        android:background="@drawable/rounded_edittext"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/scoreThree"
        app:layout_constraintEnd_toStartOf="@+id/scoreThree"
        app:layout_constraintTop_toTopOf="@+id/scoreThree"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/scoreThree"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:ems="10"
        android:inputType="number"
        android:background="@drawable/rounded_edittext"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/scoreFour"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/scoreFour"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/scoreFour"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="32dp"
        android:ems="10"
        android:inputType="number"
        android:background="@drawable/rounded_edittext"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/scoreFive"
        app:layout_constraintStart_toEndOf="@+id/scoreThree"
        app:layout_constraintTop_toTopOf="@+id/scoreFive"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/scoreFive"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:ems="10"
        android:inputType="number"
        android:background="@drawable/rounded_edittext"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toEndOf="@+id/scoreFour"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.498" />

    <Button
        android:id="@+id/button3"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:background="@drawable/custom_stroke_button"
        android:fontFamily="@font/nunito"
        android:text="Show Graph"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/scoreFive"
        app:layout_constraintStart_toStartOf="@+id/scoreOne" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Input Scores"
        android:textColor="@color/white"
        android:fontFamily="@font/nunito_black"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@+id/scoreThree"
        app:layout_constraintEnd_toEndOf="@+id/scoreFive"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="@+id/scoreOne"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.328" />
</androidx.constraintlayout.widget.ConstraintLayout>